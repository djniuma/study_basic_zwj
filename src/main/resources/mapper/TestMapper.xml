<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.basic.mapper.TestMapper">

    <sql id="table">test</sql>

    <sql id="basic_column">id, content</sql>

    <insert id="addTestContent">
        insert into
            <include refid="table"/>
            (<include refid="basic_column"/>)
        values (#{id}, #{content})
    </insert>

    <select id="queryTestContentById" resultType="java.lang.String">
            select content from
            <include refid="table"/>
            where id = #{id}
    </select>


</mapper>