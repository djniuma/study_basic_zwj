<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.basic.mapper.UserMapper">
    <resultMap id="base_result" type="com.basic.dto.UserDTO">
        <id column="id" property="id" jdbcType="VARCHAR" />
        <result column="username" property="username" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR" />
        <result column="salt" property="salt" jdbcType="VARCHAR" />
        <result column="head_url" property="headUrl" jdbcType="VARCHAR" />
    </resultMap>

    <sql id="table">user</sql>

    <sql id="basic_column">id, username, password, salt, head_url</sql>

    <insert id="addUserDTO">
        insert into
            <include refid="table"/>
            (<include refid="basic_column"/>)
        values (#{id}, #{username}, #{password}, #{salt}, #{headUrl})
    </insert>
    <select id="queryUserDTO" resultMap="base_result">
        select * from
            <include refid="table"/>
            where username = #{username}
    </select>

    <select id="queryUserDTOById" resultMap="base_result">
        select * from
        <include refid="table"/>
        where id = #{userId}
    </select>

